<% layout("layouts/boilerplate") -%>

<div class="row mt-3">
   
  <div class="col-12 col-md-6 offset-md-3 mb-4">
    <h2 class="mb-4">SignUp On WanderLust</h2>
    <form
      action="/signup"
      method="POST"
      novalidate
      class="needs-validation"
    >
    <div class="mb-3">
        <label for="username" class="form-label">Username  </label>
        <input
          type="text"
          id="username"
          class="form-control"
          id="username"
          name="username"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">E-mail  </label>
        <input
          type="email"
          id="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="name@gmail.com"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password  </label>
        <div id="password-container">
          <input
            type="password"
            id="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
          
        </div>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="extra" style="display: flex; justify-content: space-between;">
        <button class="btn btn-danger btns mt-2">Login</button>
        <a href="/login">Already have an account? Log in</a>
      </div>
      
</form>
  </div>
</div>
