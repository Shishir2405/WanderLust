<% layout("layouts/boilerplate") -%>


<div class="row mt-3" id="login-form">
  <h2 class="col-6 offset-3 mb-4">Log In</h2>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label">Username </label>
        <input
          type="text"
          id="username"
          class="form-control"
          id="username"
          name="username"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password </label>
        <div id="password-container">
          <input
            type="password"
            id="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
          <p id="toggleBtn"><i class="fa-regular fa-eye-slash"></i></p>
        </div>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <button class="btn btn-danger btns mt-2">Log In</button>
    </form>
  </div>
</div>

<script>
  const toggleBtn = document.getElementById("toggleBtn");
  const passwordInput = document.getElementById("password");

  toggleBtn.addEventListener("click", function () {
    if (passwordInput.type === "password") {
      passwordInput.type = "text";
      toggleBtn.textContent = "Hide Password";
      toggleBtn.innerHTML = '<i class="fa-regular fa-eye-slash"></i>';
    } else {
      passwordInput.type = "password";
      toggleBtn.textContent = "Show Password";
      toggleBtn.innerHTML = '<i class="fa-regular fa-eye"></i>';
    }
  });
</script>
