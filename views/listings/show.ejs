<% layout("layouts/boilerplate") -%>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN %>";
  const listing=<%- JSON.stringify(listing) %>;
</script>

<style>
  .sahre{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .buttons{
   border-radius: 0.5rem;
   display: flex;
   justify-content: center;
   cursor: pointer;
   height: 2rem;
   width: 5rem;
  }
 .buttons:hover{
   background-color: rgba(161, 158, 158, 0.132);
 }
</style>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card col-6 offset-3 show-card listing-card">
        <div class="sahre">
          <h3><%=listing.title%></h3>
        <div class="buttons" id="shareBtn">
          <p id="share" style="margin-right:0.5rem ; font-weight: 300;"><i class="fa-solid fa-arrow-up-from-bracket"></i></p>
           <p  style="text-decoration: underline;font-size: 1rem; font-weight: 600;">Share</p>
        </div>
          
        </div>
        <div class="container-img">
          <img
            src="<%=listing.image.url%>"
            alt="listing-image"
            class="card-img-top show-img"
          />
        </div>
        <div class="card-body">
          <p class="card-text">
            <strong>Owned By : </strong>
            

            <i><%=listing.owner.username %></i>
          </p>
          <p class="card-text"><%=listing.description %></p>
          <p class="card-text">
            &#8377; <%=listing.price.toLocaleString("en-IN") %>
          </p>
          <p class="card-text"><%=listing.location %></p>
          <p class="card-text"><%=listing.country %></p>
        </div>
        <% if(currUser && currUser._id.equals(listing.owner._id)){%>
        <div class="group-btns mt-2">
          <form action="/listings/<%=listing._id%>/edit" method="GET">
            <button class="btn btn-outline-danger button">Edit</button>
          </form>
          <form
            method="POST"
            action="/listings/<%=listing._id%>?_method=DELETE"
          >
            <button class="btn btn-dark offset-5">Delete</button>
          </form>
        </div>
        <% } %>
        <hr />

        <% if(currUser){ %>
        <h4>Leave a review</h4>
        <form
          action="/listings/<%=listing._id%>/reviews"
          method="POST"
          novalidate
          class="needs-validation"
        >
          <div class="mb-3 mt-3">
            <label for="review" class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="1"
                checked
                aria-label="No rating."
              />
              <input
                type="radio"
                id="first-rate1"
                name="review[rating]"
                value="1"
              />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input
                type="radio"
                id="first-rate2"
                name="review[rating]"
                value="2"
              />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input
                type="radio"
                id="first-rate3"
                name="review[rating]"
                value="3"
              />
              <label for="first-rate3" title="Average">3 stars</label>
              <input
                type="radio"
                id="first-rate4"
                name="review[rating]"
                value="4"
              />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input
                type="radio"
                id="first-rate5"
                name="review[rating]"
                value="5"
              />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              name="review[comment]"
              id="comment"
              row="10"
              cols="30"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">Please Enter Comment</div>
          </div>

          <br />
          <button class="btn btn-danger btns">Submit</button>
        </form>
        <hr />
        <% } %> <% if(listing.reviews.length>0) {%>
        <h4>All Reviews</h4>
        <br />
        <div class="row">
          <% for(let review of listing.reviews){%>
          <div class="card mb-3 ms-3">
            <div class="card-body">
              <h5 class="card-title mt-1"><%=review.author.username%></h5>
              <p class="card-text"><%=review.comment%></p>
              <p
                class="starability-result card-text"
                data-rating="<%=review.rating%>"
              ></p>
            </div>
            <form
              method="post"
              action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
              class="mb-3 mt-2"
            >
              <button class="btn btn-sm btn-outline-dark">Delete</button>
            </form>
          </div>
          <% } %>
        </div>
        <% } %>
        <div class="col-8 mb-3">
          <h4>Where you'll be</h4>
          <div id="map">
            <div id="marker">
              <div id="circle"></div>
              <i class="fa-solid fa-location-dot" id="icon-map"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<script src="/JS/map.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function() {
  const shareBtn = document.getElementById('shareBtn');

  if (navigator.share) {
    shareBtn.addEventListener('click', function() {
      navigator.share({
        title: 'Example Title', // Title of the shared item
        text: 'Check out this cool website!', // Text of the shared item
        url: window.location.href // URL of the shared item
      })
      .then(() => console.log('Successful share'))
      .catch((error) => console.log('Error sharing:', error));
    });
  } else {
    shareBtn.style.display = 'none'; // Hide the button if Web Share API is not supported
  }
});

</script>